{
  "name": "kvante-tests",
  "version": "1.0.0",
  "description": "Test suite for Kvante project",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest unit/",
    "test:integration": "jest integration/",
    "test:e2e": "playwright test",
    "test:coverage": "jest --coverage",
    "test:prompt": "node prompt-testing/runner.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.12",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "axios": "^1.5.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/unit", "<rootDir>/integration"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "../**/*.ts",
      "!../**/*.d.ts",
      "!../node_modules/**",
      "!../dist/**"
    ]
  }
}